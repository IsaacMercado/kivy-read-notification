<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: "50dp"

        Label:
            text: "Welcome"
            font_size: 48

        BoxLayout:
            orientation: "vertical"

            Label:
                text: "Email"

            TextInputValidation:
                id: email
                multiline: False

            Label:
                text: "Password"

            TextInputValidation:
                id: password
                multiline: False
                password: True

            BoxLayout:
                orientation: "horizontal"
                
                Label:
                    text: "Remember me"

                CheckBox:
                    id: remember_me

            Widget:

            Button:
                text: "Login"
                on_release: root.login(email.text, password.text, remember_me.active)

        Widget: